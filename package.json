{
  "name": "synthetics",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "index.js",
  "scripts": {
    "web-dev": "pnpm run dev -C packages/web",
    "api-dev": "pnpm run dev -C packages/api",
    "db-dev": "pnpm run dev -C packages/db",
    "site-dev": "pnpm run dev -C packages/site",
    "api-prod": "NODE_ENV=production NODE_RUN=local pnpm run dev -C packages/api",
    "web-prod": "NODE_ENV=production NODE_RUN=local pnpm run dev -C packages/web",
    "site-prod": "pnpm local -C packages/site",
    "web-build": "pnpm run build -C packages/web",
    "api-build": "pnpm run build -C packages/api",
    "db-build": "pnpm run build -C packages/db",
    "site-build": "pnpm run build -C packages/site",
    "dev": "concurrently pnpm:db-dev pnpm:api-dev pnpm:web-dev pnpm:site-dev",
    "build": "pnpm db-build && pnpm web-build && pnpm api-build",
    "start": "concurrently pnpm:api-prod pnpm:site-prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/skogs/httpmon.git"
  },
  "author": "",
  "license": "",
  "bugs": {
    "url": "https://github.com/skogs/httpmon/issues"
  },
  "homepage": "https://github.com/skogs/httpmon#readme",
  "devDependencies": {
    "@types/node": "^16.11.35",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
